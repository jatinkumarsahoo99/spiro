<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.safey.lungmonitoring.customviews.CustomTextViewCircularStd
        android:id="@+id/fvc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:gravity="top"
        android:padding="@dimen/_8sdp"
        android:text="@string/fvc"
        app:layout_constraintHorizontal_weight=".4"
        android:theme="@style/label_12ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/l"
        app:layout_constraintHorizontal_bias="0.61"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.safey.lungmonitoring.customviews.CustomTextViewCircularStd
        android:id="@+id/l"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alpha="0.5"
        android:gravity="center_horizontal|top"
        android:text="5.04 L"
        app:layout_constraintHorizontal_weight=".3"
        android:theme="@style/label_12ssp"
        app:layout_constraintBottom_toBottomOf="@+id/fvc"
        app:layout_constraintEnd_toStartOf="@+id/some_id"

        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@+id/fvc"
        app:layout_constraintTop_toTopOf="parent" />

    <com.safey.lungmonitoring.customviews.CustomTextViewCircularStd
        android:id="@+id/some_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right|top"
        android:text="121.45%"
        app:layout_constraintHorizontal_weight=".3"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:theme="@style/label_12ssp"
        app:layout_constraintBottom_toBottomOf="@+id/fvc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/l"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="#EEF0FF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fvc" />

</androidx.constraintlayout.widget.ConstraintLayout>